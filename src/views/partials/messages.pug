- if (success_msg)
  .alert.alert-success.alert-dismissible.fade.show(role="alert")
    | #{success_msg}
    button(type="button", class="btn-close", data-bs-dismiss="alert", aria-label="Close")

- if (error_msg)
  .alert.alert-danger.alert-dismissible.fade.show(role="alert")
    | #{error_msg}
    button(type="button", class="btn-close", data-bs-dismiss="alert", aria-label="Close")
